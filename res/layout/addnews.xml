<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblNewsID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News ID:"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <EditText
            android:id="@+id/txtnewstitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_bg"
            android:hint="subject"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#807a7a"
            android:textSize="15sp" >

            <requestFocus />
        </EditText>
        
			<EditText
            android:id="@+id/txtnewsdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_bg"
            android:inputType="text"
            android:hint="event date" 
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#807a7a"
            android:textSize="15sp" >

            <requestFocus />
        </EditText>
        
		<EditText
            android:id="@+id/txtnewsvenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_bg"
            android:inputType="text"
            android:hint="venue" 
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#807a7a"
            android:textSize="15sp" >

            <requestFocus />
        </EditText>
        
		
		<EditText
            android:id="@+id/txtnewsaddress"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:maxLines="10"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_bg"
            android:hint="Venue address"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#807a7a"
            android:textSize="15sp" >

            <requestFocus />
        </EditText>
			
			<EditText
            android:id="@+id/txtnewsdetails"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:maxLines="10"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_bg"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#807a7a"
            android:textSize="15sp" >

            <requestFocus />
        </EditText>

			<Button
			    android:id="@+id/btnSaveNews"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="right"
			    android:text="Save" />

    </LinearLayout>

</ScrollView>
