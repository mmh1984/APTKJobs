<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/noimage" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="IC Number"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ee1e1e" />

        <TextView
            android:id="@+id/appic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="TextView"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Full Name:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ee1e1e" />

        <TextView
            android:id="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="TextView"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Email:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ee1e1e" />

        <TextView
            android:id="@+id/appemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="TextView"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Phone:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ee1e1e" />

        <TextView
            android:id="@+id/appphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="TextView"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Gender:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ee1e1e" />

        <TextView
            android:id="@+id/appgender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="TextView"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Qualification"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ee1e1e" />

        <TextView
            android:id="@+id/appqualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="TextView"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Religion:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ee1e1e" />

		<TextView
            android:id="@+id/appreligion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="TextView"
            android:textStyle="bold" />

		<Button
		    android:id="@+id/btnviewcert"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:text="view certificates" />

		<Space
		    android:layout_width="match_parent"
		    android:layout_height="20dp" />

		<TextView
		    android:id="@+id/textView11"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:layout_marginTop="5dp"
		    android:text="Reply:"
		    android:textAppearance="?android:attr/textAppearanceSmall"
		    android:textColor="#ee1e1e"
		    android:textSize="18sp"
		    android:typeface="serif" />

		 <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Subject:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ee1e1e" />
		
		<EditText
		    android:id="@+id/txtsubject"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="left"
		    android:layout_marginBottom="5dp"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="10dp"
		    android:layout_marginTop="5dp"
		    android:background="@drawable/text_bg"
		    android:ems="10"
		    android:enabled="false"
		    android:hint="Job title"
		    android:inputType="text"
		    android:paddingLeft="10dp"
		    android:textColor="#000000"
		    android:textColorHint="#807a7a"
		    android:textSize="15sp" >

            <requestFocus />
        </EditText>
        
		  <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Reference:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ee1e1e" />
		
	<EditText
	    android:id="@+id/txtreference"
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_weight="3.39"
	    android:background="@drawable/text_bg"
	    android:ems="10"
	    android:enabled="false"
	    android:hint="job description"
	    android:inputType="textMultiLine"
	    android:maxLines="10"
	    android:paddingLeft="10dp"
	    android:scrollHorizontally="false"
	    android:textSize="14sp" />
		
	  <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Message:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ee1e1e" />
		
	<EditText
	    android:id="@+id/txtreplymessage"
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_weight="3.39"
	    android:background="@drawable/text_bg"
	    android:ems="10"
	    android:hint="job description"
	    android:inputType="textMultiLine"
	    android:maxLines="10"
	    android:padding="10dp"
	    android:scrollHorizontally="false"
	    android:textSize="14sp" />
	
		<Button
		    android:id="@+id/btnsendapp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:text="Send" />
		
		<Space
		    android:layout_width="match_parent"
		    android:layout_height="20dp" />
    </LinearLayout>

</ScrollView>
